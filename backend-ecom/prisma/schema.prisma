generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  fName     String?
  lName     String?
  username  String
  password  String
  email     String     @unique
  telNo     String?
  address   String?
  orders    Order[]
  cartItems CartItem[]
  role      String     @default("user")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Product {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  price       Float?
  picture     String?
  stock       Int?
  view        Int?       @default(0)
  cartItems   CartItem[]
  sold        Int?        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  category    Category?  @relation(fields: [categoryId], references: [id])
  categoryId  Int?
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model CartItem {
  id          Int      @id @default(autoincrement())
  product     Product  @relation(fields: [prodId], references: [id])
  prodId      Int
  quantity    Int
  totalPrice  Float
  status      String   @default("อยู่ในตะกร้า")
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId     Int
  orderedBy   User     @relation(fields: [orderedById], references: [id])
  orderedById Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id           Int        @id @default(autoincrement())
  products     CartItem[]
  netPrice     Float
  transferDate String?
  proofPicture String?
  proofDate    String?
  status       String     @default("รอการชำระเงิน")
  orderedBy    User       @relation(fields: [orderById], references: [id])
  orderById    Int
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}
